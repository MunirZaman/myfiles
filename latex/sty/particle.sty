%counter for lemma and corollary
\newcounter{lem}[section]\setcounter{lem}{0}
\renewcommand{\thelem}{\arabic{section}.\arabic{lem}}


\newcounter{cor}[theo]\setcounter{cor}{0}
\renewcommand{\thecor}{\arabic{section}.\arabic{theo}.\arabic{cor}}


%counter for definition
\newcounter{defi}[section]\setcounter{defi}{0}
\renewcommand{\thedefi}{\arabic{section}.\arabic{defi}}

%counter for remark
\newcounter{rem}[section]\setcounter{rem}{0}
\renewcommand{\therem}{\arabic{section}.\arabic{rem}}

%counter for axiom
\newcounter{ax}[section]\setcounter{ax}{0}
\renewcommand{\theax}{\arabic{section}.\arabic{ax}}

%counter for proposition
\newcounter{prop}[section]\setcounter{prop}{0}
\renewcommand{\theprop}{\arabic{section}.\arabic{prop}}

%counter for conjecture
\newcounter{conj}[section]\setcounter{conj}{0}
