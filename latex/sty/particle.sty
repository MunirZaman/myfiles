%CODE
\newenvironment{code}[1][python]{\begin{mdframed}[style=code_sty]}%
{\end{mdframed}}

%THEOREM

%label handler
\newcommand{\handler}[3]{\addtocounter{#2}{-1}\ifthenelse{\equal{#3}{}}{\refstepcounter{#2}}{\refstepcounter{#2}}}

\newenvironment{theorem}[1][]{\stepcounter{theo}\begin{mdframed}[style=blue_sty]%
\bl{\textbf{Theorem \thetheo\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Theorem}{theo}{#1}}%
{\end{mdframed}}


%PROBLEM

\newenvironment{problem}[1][]{\stepcounter{prb}\begin{mdframed}[style=purple_sty]%
\pr{\textbf{Problem \theprb\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Problem}{prb}{#1}}{\end{mdframed}}


%LEMMA AND COROLLARY

%lemma

\newenvironment{lemma}[1][]{\stepcounter{lem}\begin{mdframed}[style=green_sty]%
\gr{\textbf{Lemma \thelem\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Lemma}{lem}{#1}}{\end{mdframed}}

%corollary

\newenvironment{corollary}[1][]{\stepcounter{cor}\begin{mdframed}[style=green_sty]%
\gr{\textbf{Corollary \thecor\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Corollary}{cor}{#1}}{\end{mdframed}}

%DEFINITION

%definition

\newenvironment{definition}[1][]{\stepcounter{defi}\begin{mdframed}[style=orange_sty]%
\org{\textbf{Definition \thedefi\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Definition}{defi}{#1}}{\end{mdframed}}

%REMARK

\newenvironment{remark}[1][]{\stepcounter{rem}\begin{mdframed}[style=gray_sty]%
{\textbf{Remark \therem\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Remark}{rem}{#1}}{\end{mdframed}}

%claim

\newenvironment{claim}[1][]{\begin{mdframed}[style=green_sty]%
\grbi{\textbf{Claim\ifthenelse{\equal{#1}{}}{: }{ (#1): }}}}{\end{mdframed}}

%AXIOM, PROPOSITION and CONJECTURE

\newenvironment{axiom}[1][]{\stepcounter{ax}\begin{mdframed}[style=blue_sty]%
\bl{\textbf{Axiom \theax\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Axiom}{ax}{#1}}{\end{mdframed}}

\newenvironment{proposition}[1][]{\stepcounter{prop}\begin{mdframed}[style=blue_sty]%
\bl{\textbf{Proposition \theprop\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Proposition}{prop}{#1}}{\end{mdframed}}

\newenvironment{conjecture}[1][]{\stepcounter{conj}\begin{mdframed}[style=blue_sty]%
\bl{\textbf{Conjecture \theconj\ifthenelse{\equal{#1}{}}{ }{ (#1) }}}\handler{Conjecture}{conj}{#1}}{\end{mdframed}}

%PROOF
\renewenvironment{proof}[1][]{\blbi{Proof\ifthenelse{\equal{#1}{}}{: }{ (#1): }}}{\begin{flushright}
{\large\bl{$\clubsuit$}}
\end{flushright}}

%SOLUTION
\newenvironment{sol}[1][]{\prbi{Solution\ifthenelse{\equal{#1}{}}{}{ (#1)}: }}{\begin{flushright}
{\large\pr{$\spadesuit$}}
\end{flushright}}

